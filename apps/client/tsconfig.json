{
  "extends": "@producktivity/config/tsconfig-next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "$core/*": ["src/core/*"],
      "$modules/*": ["src/modules/*"],
      "$styles/*": ["src/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
