// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator nestgraphql {
  provider = "prisma-nestjs-graphql"
  output   = "../apps/server/src/@generated"
}

model User {
  id         String  @id @unique @default(cuid())
  username   String  @unique
  registered Boolean @default(false)

  authenticators Authenticator[]
  challenge      Challenge?

  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  case         Case[]
  notification Notification[]

  @@map("user")
}

model Authenticator {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  fmt          String
  publicKey    String @map("public_key")
  counter      Int
  credentialId String @map("credential_id")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("authenticator")
}

model Challenge {
  id        String @id @unique @default(cuid())
  challenge String @unique

  createdAt DateTime @default(now()) @map("created_at")

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @map("user_id")

  @@map("challenge")
}

model NotTest {
  id String @unique

  @@map("not_test")
}

model Case {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @map("update_at")

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @map("user_id")

  task   Task?
  event  Event?
  habit  Habit?
  filter Filter[]

  @@map("case")
}

model Task {
  id          String   @id @unique @default(cuid())
  name        String
  description String?
  due_date    DateTime
  createdAt   DateTime @default(now()) @map("created_at")
  updateAt    DateTime @map("update_at")
  isCompleted Boolean  @default(false) @map("is_completed")

  case   Case   @relation(fields: [caseId], references: [id])
  caseId String @unique @map("case_id")

  @@map("task")
}

model Habit {
  id        String   @id @unique @default(cuid())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @map("update_at")

  case   Case   @relation(fields: [caseId], references: [id])
  caseId String @unique @map("case_id")

  @@map("habit")
}

model Event {
  id          String   @id @unique @default(cuid())
  name        String
  description String?
  dueDate     DateTime @map("due_date")
  createdAt   DateTime @default(now()) @map("created_at")
  updateAt    DateTime @map("update_at")

  case   Case   @relation(fields: [caseId], references: [id])
  caseId String @unique @map("case_id")

  @@map("event")
}

model Filter {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")

  case               Case             @relation(fields: [caseId], references: [id])
  caseId             String
  FilterDefinition   FilterDefinition @relation(fields: [filterDefinitionId], references: [id])
  filterDefinitionId String

  @@map("filter")
}

model FilterDefinition {
  id    String @id @unique @default(cuid())
  label String
  order Int

  filter Filter[]

  @@map("filterDefinition")
}

model Notification {
  id          String   @id @unique @default(cuid())
  name        String
  description String?
  isVisited   Boolean  @default(false) @map("is_visited")
  createdAt   DateTime @default(now()) @map("created_at")
  updateAt    DateTime @map("update_at")
  User        User    @relation(fields: [userId], references: [id])
  userId      String

  @@map("notofication")
}
